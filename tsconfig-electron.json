{
  "compileOnSave": false,
  "files": ["src/app.ts", "src/preload.ts", "src/renderer.ts"],
  "compilerOptions": {
    "outDir": "dist",
      "sourceMap": false,
      "declaration": false,
      "moduleResolution": "node",
